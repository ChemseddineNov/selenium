import re
import time
from typing import Dict, Any, List
import tkinter as tk
from tkinter import filedialog

# ================== PICKER EXCEL ==================
root = tk.Tk()
root.withdraw()
EXCEL_PATH = filedialog.askopenfilename(
    title="S√©lectionnez le fichier Excel",
    filetypes=[("Fichiers Excel", "*.xlsx *.xls")]
)
if not EXCEL_PATH:
    raise Exception("‚ùå Aucun fichier s√©lectionn√©, arr√™t du script.")
